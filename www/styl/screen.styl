@import colors
@import prefixes
@import Tooltip
body
    margin 0px
    font-family arial, sans-serif
    .header
        width 650px
        h1
            font-size 1.5em
            font-weight normal
            color #406c94
            margin-top 8px
            margin-bottom 0px
        p
            margin-top 4px
            font-size 0.9em

    .ui-menu-item a
        font-size 0.8em

    #content
        width 650px
        position relative
        .button
            float left
            color white
            em
                font-size 0.72em
                font-style normal
                padding-left 5px
            span
                float left
                display block
                border 1px solid white
                border-radius 50%
                text-align center
                width 19px
                height 19px
            &:hover
                cursor pointer
                color #ccc
                span
                    border-color #ccc
            &:active
                cursor pointer
                color #aaa
                border-color #aaa
                span
                    border-color #aaa


        .selector
            @import "selector.styl"

        .wordCloud
            width 650px
            height 580px
            .subcontainer
                width @width
                height @height

            position absolute
            top 106px
            span:hover
            text:hover
                cursor pointer
                opacity 0.8
            span:active
            text:active
                opacity 0.9

            .button
                position absolute
                bottom -15px
                background black
                padding 5px 8px 5px 6px
                border-radius 9px
                background rgba(0,0,0,0.8)
                &.help
                    right 0px
                    &:hover
                        cursor help
                &.add
                    left 0px

            &.all
            &.voted
                text:hover
                text:active
                span:hover
                span:active
                    cursor default
                    opacity 1
                .button.add
                    display none
            .positive
            &.positive .text
            &.positive text
                color #a7f700
                fill #a7f700
            .negative
            &.negative .text
            &.negative text
                color #ff7600
                fill #ff7600
            .neutral
            &.neutral .text
            &.neutral text
                color #ffd300
                fill #ffd300


        .form
            @import form

