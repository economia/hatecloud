@import colors
@import prefixes
@import Tooltip
body
    margin 0px
    font-family arial, sans-serif
    .header
        width 650px
        h1
            font-size 1.5em
            font-weight normal
            color #406c94
            margin-top 8px
            margin-bottom 0px
        p
            margin-top 4px
            font-size 0.9em

    .ui-menu-item a
        font-size 0.8em

    #content
        width 650px
        position relative
        .button
            float left
            color white
            em
                font-size 0.72em
                font-style normal
                padding-left 5px
            span
                float left
                display block
                border 1px solid white
                border-radius 50%
                text-align center
                width 19px
                height 19px
            &:hover
                cursor pointer
                color #ccc
                span
                    border-color #ccc
            &:active
                cursor pointer
                color #aaa
                border-color #aaa
                span
                    border-color #aaa

        .selector
            @import selector

        .wordCloud
            width 650px
            height 580px
            .subcontainer
                width @width
                height @height

            position absolute
            top 90px
            span:hover
            text:hover
                cursor pointer
                opacity 0.8
            span:active
            text:active
                opacity 0.9

            .button
                position absolute
                bottom -15px
                background black
                padding 5px 8px 5px 6px
                border-radius 9px
                background rgba(0,0,0,0.8)
                &.help
                    right 0px
                    &:hover
                        cursor help
                &.add
                    left 0px

            .ods
            &.ods .text
            &.ods text
                color PartyODS
                fill PartyODS
            .ano
            &.ano .text
            &.ano text
                color PartyANO
                fill PartyANO
            .top
            &.top .text
            &.top text
                color PartyTOP
                fill PartyTOP
            .kscm
            &.kscm .text
            &.kscm text
                color PartyKSCM
                fill PartyKSCM
            .cssd
            &.cssd .text
            &.cssd text
                color PartyCSSD
                fill PartyCSSD
            .spoz
            &.spoz .text
            &.spoz text
                color PartySPOZ
                fill PartySPOZ
            .sz
            &.sz .text
            &.sz text
                color PartySZ
                fill PartySZ
            .kdu
            &.kdu .text
            &.kdu text
                color PartyKDU
                fill PartyKDU
            .svobodni
            &.svobodni .text
            &.svobodni text
                color PartySSO
                fill PartySSO
            .pirati
            &.pirati .text
            &.pirati text
                color PartyCPS
                fill PartyCPS
            .hlvzhuru
            &.hlvzhuru .text
            &.hlvzhuru text
                color PartyHV
                fill PartyHV
            .zmena
            &.zmena .text
            &.zmena text
                color PartyZ
                fill PartyZ
            .usvit
            &.usvit .text
            &.usvit text
                color PartyUPD
                fill PartyUPD
            .lev
            &.lev .text
            &.lev text
                color PartyLEV
                fill PartyLEV
            &.all
            &.voted
                text:hover
                text:active
                span:hover
                span:active
                    cursor default
                    opacity 1
                .button.add
                    display none

        .form
            @import form

