@import colors
@import prefixes
body
    margin 0px
    font-family arial, sans-serif
    overflow hidden
    #content
        width 650px
        .selector
            @import selector

        .wordCloud
            width 650px
            height 650px
            span:hover
            text:hover
                cursor pointer
                opacity 0.8
            span:active
            text:active
                opacity 0.9

            .ods
            &.ods span
            &.ods text
                color PartyODS
                fill PartyODS
            .ano
            &.ano span
            &.ano text
                color PartyANO
                fill PartyANO
            .top
            &.top span
            &.top text
                color PartyTOP
                fill PartyTOP
            .kscm
            &.kscm span
            &.kscm text
                color PartyKSCM
                fill PartyKSCM
            .cssd
            &.cssd span
            &.cssd text
                color PartyCSSD
                fill PartyCSSD
            .spoz
            &.spoz span
            &.spoz text
                color PartySPOZ
                fill PartySPOZ
            .sz
            &.sz span
            &.sz text
                color PartySZ
                fill PartySZ
            .kdu
            &.kdu span
            &.kdu text
                color PartyKDU
                fill PartyKDU
            &.all
            &.voted
                text:hover
                text:active
                span:hover
                span:active
                    cursor default
                    opacity 1

        .form
            position absolute
            top 0px
            left 0px
            form
                position absolute
                width @width
                top 83px
                left (@width * 1.3)
                transition left 0.8s
                &.displayed
                    left 0px
