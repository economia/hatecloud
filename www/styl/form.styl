&
    position absolute
    top 0px
    left 0px
    form
        background black
        background rgba(0,0,0,0.8)
        position absolute
        padding-left 90px
        width (@width - 90px)
        top 86px
        left (@width * -1.3)
        transition left 0.8s
        &.displayed
            left 0px
        .pair
            float left
            width 157px
            margin-top 4px
            padding-bottom 10px
            margin-right 4px
            label
                color white
                font-size 0.7em
                padding-left 3px
        input[type=submit]
            margin-top 24px
        .cancelButton
            float left
            position absolute
            top 25px
            left 8px
            color white
            em
                font-size 0.72em
                font-style normal
                padding-left 5px
            span
                float left
                display block
                border 1px solid white
                border-radius 50%
                padding-top 1px
                transform rotate(45deg)
                text-align center
                width 19px
                height 18px
            &:hover
                cursor pointer
                color #aaa
                span
                    border-color #aaa
            &:active
                cursor pointer
                color #666
                border-color #666
                span
                    border-color #888

