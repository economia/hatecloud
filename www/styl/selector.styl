&
    margin 0px
    background #ccc
    float left
    width 100%
    list-style-type none
    padding 0px
    li
        float left
        padding 0px
        padding-bottom 8px
        width (650 / 8 - 1)px
        text-align center
        border-left 1px solid #444
        &:first-child
            border-left 0px
        &.active
            background #888
        &:hover
            cursor pointer
            background #aaa
        &:active
            background #888
        img.on
            display none
        img.off
            display block
            opacity 0.7
        img
            margin-left 4px
        &:hover
        &:active
            img.off
                opacity 1
        &.active
            img.off
                display none
            img.on
                display block
