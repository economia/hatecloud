&
    margin 0px
    background #ccc
    float left
    width 100%
    list-style-type none
    padding 0px
    li
        float left
        padding 0px
        padding-bottom 8px
        width (650 / 8 - 1)px
        text-align center
        font-size 0.72em
        font-weight bold
        border-left 1px solid white
        color #777
        &:first-child
            border-left 0px
        &.active
            color black
            background #a6a6a6
        &:hover
            color #e2e2e2
            cursor pointer
            background #aaa
        &:active
            background #999
        img.on
            display none
        img.off
            display block
            opacity 0.7
        img
            margin-left 4px
            margin-bottom 4px
        &:hover
        &:active
            img.off
                opacity 1
        &.active
            img.off
                display none
            img.on
                display block
