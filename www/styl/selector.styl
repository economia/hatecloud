&
    margin 0px
    float left
    width 100%
    height 94px
    list-style-type none
    padding 0px
    position relative
    z-index 299
    transition height 0.6s
    background white
    background rgba(255, 255, 255, 0.8)
    li.lower
        margin-top 10px
    &.secondHalf li
        top -94px
    &.expanded
        height 178px
        li
            top 0px
    li
        position relative
        float left
        padding 14px 0px 0px 0px
        width (650 / 2 - 1)px
        box-sizing border-box
        height 99px
        text-align center
        font-size 1.25em
        font-weight bold
        background #ccc
        border-left 1px solid white
        border-bottom 1px solid #f0f0f0
        color #000
        transition top 0.6s, margin-top 0.6s
        line-height 1.9em
        text-transform uppercase
        b
            font-weight bold
            font-size 2.65em
            display block
        .arrow
            display block
            position absolute
            bottom 0px
            transition bottom 0.4s
            left (@width / 2 - 10)
            width 0px
            height 0px
            border-style solid
            border-width 15px 15px 0 15px
            border-color #ccc transparent transparent transparent

        &:first-child
            border-left 0px
        &.active
            color black
            background #a6a6a6
            border-bottom-color #d2d2d2
            .arrow
                bottom -15px
                border-top-color @background
        &:hover
            color black
            cursor pointer
            background #aaa
            .arrow
                border-top-color @background

        &.sel-more
            position absolute
            top 0px
            right 1px
        &.sel-sz
            clear left
            border-left 0px


        &:active
            background #999
            .arrow
                border-top-color @background
